extends layout 

block content 
  h1= title

  form(method='POST' action='')
    div.mb-3
      label.form-label(for='name') Type:
      input#name.form-control(type='text' placeholder='Enter type name here' name='name' required='true' value=(undefined===type ? '' : type.name))
    div.mb-3
      label.form-label(for='description') Description:
      input#description.form-control(type='text' placeholder='Short description about new type' name='description' required='true' value=(undefined===type ? '' : type.description))
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors 
        li!= error.msg
